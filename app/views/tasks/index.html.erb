<h1>タスク一覧</h1>
  <%= link_to "新規作成", new_task_path, class: 'btn btn-primary' %>

<div class='mb-3'>
  <table class='table table-hover'>
    <thead class='thead-defalut'>
      <tr>
        <th><%= Task.human_attribute_name(:name)%></th>
        <th><%= Task.human_attribute_name(:created_at)%></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task|%>
        <tr>
          <td><%= link_to task.name, task %>
          <td><%= task.created_at %>
          <td>
            <%= link_to '編集', task, class: 'btn btn-secondary mr-3' %>
            <%= link_to '削除', task, class: 'btn btn-secondary',  data: { turbo_method: :delete, turbo_confirm: '削除してもよろしいですか？' } %>
          </td>

        </tr>

      <% end %>

    </tbody>
  </table>

</div>